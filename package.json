{
    "name": "snapshop-extension",
    "displayName": "Snapshop 图色处理工具",
    "description": "现代、简洁、快速的图色处理工具",
    "version": "2.1.0",
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:snapshop-extension.snapshop"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "snapshop-extension.snapshop",
                "title": "Snapshop"
            }
        ]
    },
    "keywords": [
        "snapshop",
        "snapshot",
        "截图",
        "touchsprite",
        "触动精灵",
        "触动"
    ],
    "publisher": "autsing",
    "icon": "assets/logo_128_128.png",
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch:extension": "webpack --watch",
        "watch:snapshop": "cd ./src/snapshop && npm run watch:vscode",
        "build:extension": "webpack --mode production --devtool hidden-source-map",
        "build:snapshop": "cd ./src/snapshop && npm run build:vscode",
        "package": "npm-run-all build:*",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@types/vscode": "^1.63.0",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "@vscode/test-electron": "^1.6.2",
        "eslint": "^8.1.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.3",
        "npm-run-all": "^4.1.5",
        "ts-loader": "^9.2.5",
        "typescript": "^4.4.4",
        "webpack": "^5.52.1",
        "webpack-cli": "^4.8.0"
    }
}
